@model Rocky_Models.ApplicationType

<form method="post" asp-action="Create" style="margin-top:80px!important;">
    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Application Type</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="NameApp">Name App</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NameApp" class="form-control" />

                        <span asp-validation-for="NameApp" class="text-danger"></span>
                    </div>

                </div>
               
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts    {
    @{
        <partial name="_ValidationScriptsPartial" />}
}