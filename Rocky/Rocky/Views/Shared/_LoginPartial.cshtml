@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="btn" id="navButtonActive" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button style="color:crimson" id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a style="color:crimson" class="btn" id="navButtonActive" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
   
    <li class="nav-item">
        <a style="color:crimson" class="btn" id="navButtonActive" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

