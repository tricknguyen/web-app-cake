@model Rocky_Models.Product
@using Rocky_Utility
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
                                    <!--filter class-->
<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Name</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0:c0}", Model.Price)</span> / pic</label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100 text-dark style="background-color:lavenderblush">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100 text-dark" style="background-color:aliceblue">@Model.ApplicationType.NameApp</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p></p>
            </div>
            <div class="col-12 p-1">
                <a id="viewdetals" style="height:40px;" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary form-control btn-sm p-2" >View Details</a>
                <!--Khi ng dùng click vào detail sẽ hiện thị ra product nên chúng ta cần truyền cho nó Id để hiển thị -->
            </div>
        </div>
    </div>
</div>